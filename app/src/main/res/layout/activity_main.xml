<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeInsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/relativeSpeedDial"
        android:padding="20dp">

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:cursorVisible="false"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/editTextPhone"
            android:text="DELETE"
            android:onClick="buttonClickEvent"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeSpeedDial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/relativeButtons"
        android:padding="20dp">

        <Button
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="+"
            android:text=""
            android:textColorHint="@color/white"
            android:textSize="10sp"
            />

        <Button
            android:id="@+id/y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/x"
            android:hint="+"
            android:text=""
            android:textColorHint="@color/white"
            android:textSize="10sp" />

        <Button
            android:id="@+id/z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/y"
            android:hint="+"
            android:text=""
            android:textColorHint="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonClickEvent"
            android:text="1"
            android:textSize="25sp" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/one"
            android:text="2"
            android:textSize="25sp"
            android:onClick="buttonClickEvent"/>

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/two"
            android:text="3"
            android:textSize="25sp"
            android:onClick="buttonClickEvent"/>

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one"
            android:text="4"
            android:textSize="25sp"
            android:onClick="buttonClickEvent"/>

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/two"
            android:layout_toEndOf="@+id/four"
            android:layout_marginStart="20dp"
            android:text="5"
            android:textSize="25sp"
            android:onClick="buttonClickEvent"/>

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/three"
            android:layout_toEndOf="@+id/five"
            android:layout_marginStart="20dp"
            android:text="6"
            android:textSize="25sp"
            android:onClick="buttonClickEvent"/>

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/four"
            android:text="7"
            android:textSize="25sp"
            android:onClick="buttonClickEvent"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/five"
            android:layout_toEndOf="@id/seven"
            android:layout_marginStart="20dp"
            android:text="8"
            android:textSize="25sp"
            android:onClick="buttonClickEvent"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/six"
            android:layout_toEndOf="@id/eight"
            android:layout_marginStart="20dp"
            android:text="9"
            android:textSize="25sp"
            android:onClick="buttonClickEvent"/>

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seven"
            android:text="+"
            android:textSize="25sp"
            android:onClick="buttonClickEvent"/>

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eight"
            android:layout_toEndOf="@+id/plus"
            android:layout_marginStart="20dp"
            android:text="0"
            android:textSize="25sp"
            android:onClick="buttonClickEvent"/>

        <Button
            android:id="@+id/cardinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nine"
            android:layout_toEndOf="@+id/zero"
            android:layout_marginStart="20dp"
            android:text="#"
            android:textSize="25sp"
            android:onClick="buttonClickEvent"/>

    </RelativeLayout>

    <Button
        android:id="@+id/call"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeButtons"
        android:layout_centerInParent="true"
        android:foreground="@drawable/ic_phone"
        android:foregroundGravity="center"
        android:foregroundTint="@color/white"/>

</RelativeLayout>